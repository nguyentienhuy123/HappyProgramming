@model HappyProgramming_SWP391_GROUP1.Models.Post
@{
    Layout = "_Layout1";
}
<!doctype html>
<html lang="en">
 <meta charset="utf-8">
<head>
    <title>Login 07</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></script>

    <link rel="stylesheet" href="~/PostTemplate/style.css">

</head>
<body>
    <form action="@Url.Action("ViewEdit", "Post")" class="signin-form" method="post">
    <div class="container mt-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <div class="d-flex flex-column comment-section">
                    <div class="bg-white p-2">
                        <div class="d-flex flex-row user-info">
                            <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                            <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name"></span><span class="date text-black-50">Shared publicly - Jan 2020</span></div>
                        </div>
                        <div class="mt-2">
                            <label for="input-id">Title</label><br />
                            <input type="text" id="input-id" value="@Model.Title" name="title" title="title can not empty" required/>
                        </div>
                        <div class="mt-2">
                            @* <p class="comment-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>*@
                            <label for="content">Content:</label> <br />
                                <textarea id="content" name="content" rows="4" 
                                    placeholder="@Model.Content" cols="50" title="content can not empty" required></textarea>
                        </div>
                        <div>
                            @*@Html.Label("Attachment", htmlAttributes: new { @class = "control-label" })*@
                                <input type="file" placeholder="@Model.AttachmentPath" name="attachmentPath" class="form-control-file" />
                        </div>
                    </div>

                    </div>
                    <textarea hidden type="text" id="content" name="postId" class="form-control ml-1 shadow-none textarea">@Model.Id</textarea>
                    <button asp-action="UpdatePost" asp-controller="Post" class="btn btn-primary" style="font-size: 16px;">Save</button>
                </div>
                </div>
            </div>
     </form>
</body>
</html>