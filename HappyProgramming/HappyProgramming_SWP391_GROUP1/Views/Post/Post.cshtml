@model HappyProgramming_SWP391_GROUP1.Models.Post
@{
    Layout = "_Layout1";
    List<Comment> ListComment = (List<Comment>)ViewBag.listComment;
}

<!doctype html>
<html lang="en">

<head>
    <title>Login 07</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></script>
    <link rel="stylesheet" href="~/PostTemplate/style.css">

</head>

<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <form class="signin-form" method="post">
                    <div class="d-flex flex-column comment-section">
                        <div class="bg-white p-2">
                            <div class="d-flex flex-row user-info">
                                <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                                <div class="d-flex flex-column justify-content-start ml-2">
                                    <span class="d-block font-weight-bold name"></span><span class="date text-black-50">Shared publicly - Jan 2020</span>
                                </div>
                            </div>
                            <div class="title">
                                <h1>@Model.Title</h1>
                            </div>
                            <div class="mt-2">
                                <p>@Model.Content</p>
                            </div>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                               {
                                <a href="@Url.Action("DownloadAttachment", "Post", new { postId = Model.Id })" download="">Download Attachment</a>
                                }
                            </div>
                        </div>
                        <div class="bg-white">
                            <div class="d-flex flex-row fs-12">
                                <div class="like p-2 cursor">
                                    <i class="fa fa-commenting-o"></i><span class="ml-1">Comment</span>
                                </div>
                                @*<div class="like p-2 cursor"><i class="fa fa-share"></i><span
                                class="ml-1">Share</span></div>*@
                            </div>
                        </div>
                        <div class="bg-light p-2">
                            <div class="d-flex flex-row align-items-start">
                                <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                                <textarea type="text" id="content" name="content"
                                          class="form-control ml-1 shadow-none textarea"></textarea>
                                <textarea hidden type="text" id="content" name="postId"
                                          class="form-control ml-1 shadow-none textarea">@Model.Id</textarea>
                            </div>

                            <div class="mt-2 text-right" style="margin-bottom:20px">
                                <button asp-action="CommentPost" asp-controller="Post"
                                        class="btn btn-info btn-sm shadow-none" type="submit">
                                    Comment
                                </button>
                            </div>
                            @if (ListComment != null)
                            {
                                @foreach (var content in ListComment)
                                {
                                    <div class="d-flex flex-row align-items-start">
                                        <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                                        <p class="form-control ml-1 shadow-none textarea">@content.Content</p>
                                        <form action="@Url.Action(" DeleteComment", "Post" ) class="signin-form" method="post">
                                            <textarea hidden type="text" id="content" name="postId"
                                              class="form-control ml-1 shadow-none textarea">@Model.Id</textarea>
                                            <textarea hidden class="form-control ml-1 shadow-none textarea"
                                              name="commentId">@content.Id</textarea>
                                            <div class="dropdown">
                                                <button class="btn shadow-none" type="button" id="dropdownMenuButton"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <svg on version="1.0" xmlns="http://www.w3.org/2000/svg" width="30px"
                                                 height="20px" viewBox="0 0 512.000000 512.000000"
                                                 preserveAspectRatio="xMidYMid meet">

                                                        <g transform="translate(0.000000,512.000000) scale(0.100000,-0.100000)"
                                                   fill="#000000" stroke="none">
                                                            <path d="M841 3024 c-253 -68 -410 -331 -346 -579 67 -256 329 -415 580 -350 190 50 330 207 358 401 48 331 -270 615 -592 528z" />
                                                            <path d="M2441 3024 c-253 -68 -410 -331 -346 -579 67 -256 329 -415 580 -350 190 50 330 207 358 401 48 331 -270 615 -592 528z" />
                                                            <path d="M4041 3024 c-253 -68 -410 -331 -346 -579 67 -256 329 -415 580 -350 190 50 330 207 358 401 48 331 -270 615 -592 528z" />
                                                        </g>
                                                    </svg>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <button asp-action="DeleteComment" asp-controller="Post"
                                                    class="delete-button">
                                                        Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </form>

                <div style="display: flex; justify-content: flex-end; margin-top: 20px;">
                    <button id="myButton" style="font-size: 16px; margin-right: 10px" type="button"
                            class="btn btn-info" s onclick='window.location = "@Url.Action("ViewEditPost", "Post", new {postId = @Model.Id})";'>
                        Edit
                    </button>
                    <form action="@Url.Action("DeletePost", "Post") class="signin-form" method="post">
                        <textarea hidden type="text" id="content" name="postId"
                                  class="form-control ml-1 shadow-none textarea">@Model.Id</textarea>
                        <button asp-action="DeletePost" asp-controller="Post" class="btn btn-danger"
                                style="font-size: 16px;">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>

</html>
