@page
@model HappyProgramming_SWP391_GROUP1.Controllers.SignUpController
@{
}
<!doctype html>
<html lang="en">
<head>
    <title>Sign Up 08</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/SignUpTemplate/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap">
                        <div class="img" style="background-image: url(SignUpTemplate/images/bg.jpg);"></div>
                        <h3 class="text-center mb-4">Sign Up</h3>
                        <form action="@Url.Action("SignUp", "SignUp")" class="signin-form" method="post">

                            <div class="form-group mb-3">
                                <label class="label" for="name">Username</label>
                                <input type="text" class="form-control" placeholder="Username" name="username"
                                       pattern="[a-zA-Z0-9]+"
                                       minlength="4" maxlength="10"
                                       required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Password</label>
                                <input id="myInput" type="password" class="form-control" placeholder="Password" name="password"
                                       pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$"
                                       title="Password must contain: Minimum 8 characters atleast 1 Alphabet and 1 Number"
                                       required>
                                <div style="margin-left:240px">
                                    <input style="" type="checkbox" onclick="myFunction()">  Show Password
                                </div>

                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Email</label>
                                <input type="text" class="form-control" placeholder="johndoe@gmail.com" name="email" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3"
                                        asp-action="SignUp" asp-controller="SignUp">
                                    Sign Up
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/SignUpTemplate/js/jquery.min.js"></script>
    <script src="~/SignUpTemplate/js/popper.js"></script>
    <script src="~/SignUpTemplate/js/bootstrap.min.js"></script>
    <script src="~/SignUpTemplate/js/main.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</body>
</html>

