@page
@model HappyProgramming_SWP391_GROUP1.Controllers.SignUpController
@{
}
<!doctype html>
<html lang="en">
<head>
	<title>Sign Up 08</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/SignUpTemplate/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Sign Up</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="login-wrap">
						<h3 class="text-center mb-4">Sign Up</h3>
						<form action="@Url.Action("Verify", "SignUp")" class=" signin-form" method="post">
							<div class="form-group mb-3">
								<label class="label" for="name">PIN</label>
								<input name="pin" type="text" class="form-control" placeholder="Enter your PIN" >
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3"
										asp-action="Verify" asp-controller="SignUp">
									Confirm
								</button>
							</div>
							<div class="form-group d-md-flex">
							
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/SignUpTemplate/js/jquery.min.js"></script>
	<script src="~/SignUpTemplate/js/popper.js"></script>
	<script src="~/SignUpTemplate/js/bootstrap.min.js"></script>
	<script src="~/SignUpTemplate/js/main.js"></script>

</body>
</html>

