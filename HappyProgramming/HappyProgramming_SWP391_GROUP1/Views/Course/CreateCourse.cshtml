@{
    Layout = "_Layout1";
}
@model CourseViewModel
<style>
    .backGround {
        background-color: #FBF9EF;
    }
</style>

<body class="backGround">

    <h1>Create Course</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="CreateCourse" asp-controller="Course">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Cousre Name</label>
                    <input asp-for="Name" class="form-control"></input>
                </div>

                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cousre Description</label>
                    <input asp-for="Description" class="form-control"></input>
                </div>

                <div class="form-group">
                    <input type="submit" style="margin-top:20px" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
